<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="84dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            app:layout_constraintHorizontal_bias="0.841" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reverse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reloadButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.111" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.835"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.491" app:layout_constraintVertical_bias="0.66"
            android:id="@+id/linearLayout7">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/team1ScoreHistView"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/team2ScoreHistView"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="310dp"
            android:layout_height="101dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:id="@+id/linearLayout5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Next Set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/nextSetButton"
                    android:visibility="visible"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Team 1 Scored"
                    android:layout_height="wrap_content" android:id="@+id/addPointTeam1Button"
                    android:layout_width="155dp"/>
            <Button
                    android:text="Team 2 Scored"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content" android:id="@+id/addPointTeam2Button"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.91">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team1NameView" android:layout_weight="1"
                tools:minWidth="50dp" android:textSize="25sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team1SetsView" android:layout_weight="1"
                tools:minWidth="50dp" android:textSize="25sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team2SetsView" android:layout_weight="1"
                android:minWidth="50dp" android:textSize="25sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team2NameView" android:layout_weight="1"
                android:minWidth="50dp" android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.625">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team1ScoreView" android:layout_weight="1"
                tools:minWidth="50dp" android:textSize="30sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/team2ScoreView" android:layout_weight="1"
                android:minWidth="50dp" android:textSize="30sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>