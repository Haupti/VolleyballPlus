<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="#D1EAEAEA">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginLeft="48dp" android:layout_marginTop="48dp" android:layout_marginRight="48dp"
                  android:layout_marginBottom="48dp">
            <TextView
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="18dp"/>
            <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp" android:id="@+id/settingsButton" android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_round_settings_48" android:layout_marginLeft="15dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>