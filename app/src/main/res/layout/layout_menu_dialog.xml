<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="300dp"
                android:layout_height="500dp">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="474dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginLeft="48dp" android:layout_marginTop="48dp" android:layout_marginRight="48dp"
                  android:layout_marginBottom="5dp">
            <TextView
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="18dp"/>
            <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp" android:id="@+id/settingsButton" android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_round_settings_48" android:layout_marginLeft="15dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginLeft="48dp" android:layout_marginRight="48dp" android:layout_marginTop="5dp">
            <TextView
                    android:text="Games Played"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:textSize="18dp"/>
            <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp" android:id="@+id/gamesPlayedButton" android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_baseline_history_48" android:layout_marginLeft="15dp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:layout_marginTop="5dp"
                android:layout_marginRight="48dp" android:layout_marginBottom="5dp">
            <TextView
                    android:text="Restart/New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:textSize="18dp"/>
            <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp" android:id="@+id/reloadButton" android:layout_marginLeft="15dp"
                    android:background="#00FFFFFF" android:foreground="@drawable/ic_baseline_folder_open_48"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>